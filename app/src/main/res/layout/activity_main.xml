<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2个扇形"
                android:onClick="onClick"
                android:id="@+id/animationButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1%的比例"
                android:onClick="onClick"
                android:id="@+id/roundButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多个扇形"
                android:onClick="onClick"
                android:id="@+id/shadowButton" />

           <!-- <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="animation speed default"
                android:onClick="onClick"
                android:id="@+id/animationSpeedDefault" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="animation speed slow"
                android:onClick="onClick"
                android:id="@+id/animationSpeedSlow" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="animation speed fast"
                android:onClick="onClick"
                android:id="@+id/animationSpeedFast" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="animation speed normal"
                android:onClick="onClick"
                android:id="@+id/animationSpeedNormal" />-->

        </LinearLayout>

    </HorizontalScrollView>

    <com.example.tutu.myapplication.TPieChart
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:animation="true"
        app:chart_background="#fff"
        app:round="false"
        app:isDisperse="true"
        android:paddingTop="26dp"
        android:paddingBottom="20dp"
        android:id="@+id/magnificentChart"
        android:layout_marginTop="86dp"
        android:layerType="hardware"
        />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="268dp"
        android:layout_height="24dp"
        android:max="100"
        android:progress="50"
        android:layout_marginTop="86dp"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>


